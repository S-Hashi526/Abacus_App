<% provide(:title, 'Base list') %>
<% provide(:button_text, '新規作成') %>

<h1>拠点一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered table-condensed" id="table-bases">
      <thead>
        <tr>
          <td class="col-md-4"></td>
          <td class="col-md-2"></td>
          <td class="col-md-2 t-middle">拠点番号</td>
          <td class="col-md-2 t-middle">拠点名</td>
          <td class="col-md-2 t-middle">勤怠種類</td>
        </tr>
  </thead>

  <% @bases.each do |base| %>
    <tbody>
      <tr>
        <td>
          <%= link_to "編集", edit_basis_path(base), remote: true, class: "btn btn-primary" %>
        </td>
        <td class="t-middle">
          <%= link_to "削除", base, method: :delete,
          data: { confirm: "削除してよろしいですか?" },
          class: "btn btn-danger" %>
        </td>
        <td class="t-middle"><%= base.base_number %></td>
        <td class="t-middle"><%= base.base_name %></td>
        <td class="t-middle"><%= base.attendance_type %></td>
      </tr>
    </tbody>
  <% end %>
</table>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to "拠点情報の追加", new_basis_path, remote: true, class: "btn btn-primary" %>
  </div>
</div>

<!-- モーダルウィンドウ表示 -->
<div id="edit-base" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="new-base" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
